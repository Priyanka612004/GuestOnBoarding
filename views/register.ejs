<title>Register</title>
<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-white-900 text-black py-5 flex flex-col items-center justify-center">
        <div class="flex flex-col items-center gap-5 px-4">
            <!-- <img class="w-1/2" src="/images/logo.png" alt=""> -->
            <h3 class=" text-3xl font-bold">Register</h3>
            <form class="w-full" action="/register" method="post">
                <input class="px-3 mt-2 py-2 border-2 border-white-800 rounded-md block w-full bg-white-900" type="text"
                    placeholder="username" name="username" minlength="6" required>
                <input class="px-3 mt-2 py-2 border-2 border-white-800 rounded-md block w-full bg-white-900"
                    type="email" placeholder="email" name="email" required>
                <input class="px-3 mt-2 py-2 border-2 border-white-800 rounded-md block w-full bg-white-900" type="text"
                    placeholder="name" name="name" minlength="6" required>
                <input class="px-3 mt-2 py-2 border-2 border-white-800 rounded-md block w-full bg-white-900"
                    type="password" placeholder="password" name="password" minlength="6" required>
                <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2" type="submit" value="Make New Account">
            </form>
            <span>Already have an account? <a href="/login" class="text-blue-500">Log In</a></span>
        </div>
    </div>

    <% include ./partials/footer.ejs %>